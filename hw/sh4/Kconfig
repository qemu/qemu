config R2D
    bool
    default y
    depends on SH4
    imply PCI_DEVICES
    imply TEST_DEVICES
    imply RTL8139_PCI
    select I82378 if TEST_DEVICES
    select IDE_MMIO
    select PFLASH_CFI02
    select PCI
    select SM501
    select SH7750
    select SH_PCI

config SH7750
    bool
    select SH_INTC
    select SH_SCI
    select SH_TIMER
