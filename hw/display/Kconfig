config VGA_ISA
    bool
    depends on ISA_BUS
    select VGA

config VGA_MMIO
    bool
    select VGA

config VMWARE_VGA
    bool
    default y if PCI_DEVICES && (PC_PCI || MIPS)
    depends on PCI
    select VGA

